            height: 40px;
            line-height: 40px;
            padding-left: 60px;
        }

            .aside .list .sonNav li a:hover, .aside .list .item.active .parentNav {
                background-color: #222;
            }

        .aside .list .sonNav {
            display: none;
        }

        .aside .list .item.active .sonNav {
