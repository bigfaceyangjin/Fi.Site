    <script type="text/javascript">
        /* 采用面向对象的方式 ES6的语法 */
        var that;
        class assideNav {
            constructor(className) {
                that = this;
                this.main = document.querySelector(className);//获取主区域
                this.lis = this.main.querySelectorAll(".list .item");//获取导航列表项Li
                this.parentNavs = this.main.querySelectorAll(".list .item .parentNav");//父导航
                this.init();
            }
            init() {
                //父导航 点击事件
                for (var i = 0; i < this.lis.length; i++) {
                    this.parentNavs[i].onclick = this.toggleNav;
                }
            }
            clearClass() {
                for (var i = 0; i < this.lis.length; i++) {
                    this.lis[i].className = "item";
                }
            }
            toggleNav() {
                var li = this.parentNode;//点击的是父导航 给当前Li节点添加active类 让其子节点block
                //如果当前Li已经有active属性 则直接去除属性即可
                if (li.classList.contains("active")) {
                    //li.className = "item";
                    li.classList.remove("active");
                }
                else {
                    that.clearClass();//先关闭所以下拉选项 注意this指向问题 这里写this代表的是当前点击的parentNav
                    li.classList.add("active");
                }
            }
        }
        var asideNav = new assideNav(".aside");
    </script>
