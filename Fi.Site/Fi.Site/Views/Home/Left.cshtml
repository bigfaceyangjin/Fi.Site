                <div class="parentNav">
                    <i class="iconfont icon-liebiao"></i>
                    <span>统计报表管理</span>
                    <i class="iconfont icon-xiangxia"></i>
                </div>
                <ul class="sonNav">
                    <li><a href="#">月结表</a></li>
                </ul>
            </li>
        </ul>
    </div>
    <script type="text/javascript">
        var that;
        class asideClass {
            constructor(className) {
                that = this;
                //主区域
                this.main = document.querySelector(className);
                //导航列表项
                this.lis = this.main.querySelectorAll(".nav_list .item");
                //父导航
                this.parentNavs = this.main.querySelectorAll(".nav_list .item .parentNav");
                for (var i = 0; i < this.parentNavs.length; i++) {
                    this.parentNavs[i].onclick = this.toggleNav;
                }
            }
            //父导航点击函数
            toggleNav() {
                if (this.parentNode.classList.contains("active")) {
                    this.parentNode.classList.remove("active");
                }
                else {
                    //先关闭所有 再开启当前下拉
                    that.clearClass();
                    this.parentNode.classList.add("active");
                }
            }
            clearClass() {
                for (var i = 0; i < this.parentNavs.length; i++) {
                    this.parentNavs[i].parentNode.classList.remove("active");
                    //this.lis[i].className = "item";
                }
            }
        }
        var aside = new asideClass(".nav_aside");
    </script>
